{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "declaration": false,
    "allowJs": true,
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "./dist/**/*"]
}
